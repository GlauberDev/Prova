@model NegociacaoAPI.ViewModels.SimularNegociacaoViewModel

@{
    ViewData["Title"] = "SimularNegociacao";
}

<h1>Simular Negociação</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SimularNegociacao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cpf" class="control-label"></label>
                <input asp-for="cpf" class="form-control" readonly />
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qtdParcelas" class="control-label"></label>
                <input asp-for="qtdParcelas" class="form-control" value="10"/>
                <span asp-validation-for="qtdParcelas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Simular" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao início</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
