@model NegociacaoAPI.ViewModels.ConfirmarSimulacaoViewModel

@{
    ViewData["Title"] = "ConfirmarNegociacao";
}

<h1>Confirmar Negociação</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmarNegociacao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cpf" class="control-label"></label>
                <input asp-for="cpf" class="form-control" readonly />
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>
            <div class="invisible">
                <label asp-for="simulacaoId" class="control-label"></label>
                <input asp-for="simulacaoId" class="form-control" readonly />
                <span asp-validation-for="simulacaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
